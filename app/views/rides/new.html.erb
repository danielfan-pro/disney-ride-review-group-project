<%= form_for @ride do |f|%>
  <%= f.label :name, "Ride Name" %>
  <%= f.text_field :name %>

  <%= f.label :location, "Ride Location" %>
  <%= f.select :location, ['','Frontierland', 'Fantasyland', 'Liberty Square', 'Tomorrowland', 'Adventureland', 'Main Street, U.S.A' ] %>

  <%= f.label :image_url %>
  <%= f.url_field :image_url %>

  <%= f.label :description, "Ride Description" %>
  <%= f.text_area :description, size: "70x3" %>

  <%= f.submit %>
<% end %>
